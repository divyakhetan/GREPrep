<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@android:color/holo_green_dark">
    <EditText
            android:paddingLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/loginEmailEditText"
            android:background="@android:color/background_light" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Email"/>
    <EditText
            android:paddingLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/loginPasswordEditText"
            android:background="@android:color/background_light"
            app:layout_constraintStart_toStartOf="@+id/loginEmailEditText" app:layout_constraintEnd_toEndOf="@+id/loginEmailEditText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/loginEmailEditText"
            android:hint="Password"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton" app:layout_constraintEnd_toEndOf="@+id/loginPasswordEditText"
            app:layout_constraintStart_toStartOf="@+id/loginPasswordEditText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/loginPasswordEditText"/>
    <TextView
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:text="Don't have an account? Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backToRegister" app:layout_constraintEnd_toEndOf="@+id/loginButton"
            app:layout_constraintStart_toStartOf="@+id/loginButton" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"/>
</android.support.constraint.ConstraintLayout>